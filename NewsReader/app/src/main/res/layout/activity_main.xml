<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.pxy.newsreader.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>
    <RadioGroup
        android:id="@+id/frames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0"
        android:background="#f4d6e2f1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <RadioButton
            android:id="@+id/fram1"
            style="@style/tab_item_style"
            android:drawableTop="@drawable/select_tab_background"
            android:text="首页"
            />

        <RadioButton
            android:id="@+id/fram2"
            style="@style/tab_item_style"
            android:drawableTop="@drawable/select_tab_background2"
            android:text="新闻"
            />

        <RadioButton
            android:id="@+id/fram3"
            style="@style/tab_item_style"
            android:drawableTop="@drawable/select_tab_background3"
            android:text="组图"
            />

        <RadioButton
            android:id="@+id/fram4"
            style="@style/tab_item_style"
            android:drawableTop="@drawable/select_tab_background4"
            android:text="更多"
            />
    </RadioGroup>

</LinearLayout>
